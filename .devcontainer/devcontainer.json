{
	"name": "Rue Take-Home Assignment",
	"image": "mcr.microsoft.com/devcontainers/base:bookworm",
	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers/features/common-utils:2": {
			"configureZshAsDefaultShell": true
		},
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/devcontainers-contrib/features/poetry:2": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/itsmechlark/features/postgresql:1": {}
	},
	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		5432,
		5173,
		8000
	],
	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"charliermarsh.ruff"
			]
		}
	},
	// ðŸ‘‡ Mount SSH keys to use with GitHub
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=cached"
	],
	// ðŸ‘‡ Setup Git user and email
	"postCreateCommand": "git config --global user.name 'Alfredo Delgado' && git config --global user.email 'alfredodlgdmrn@gmail.com'",
	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}